CSS 
/*mobile menu navigation*/
.mobile-menu {
    display: flex;
    justify-content: center;
}
.mobile-menu__icon--open, .mobile-menu__icon--close  {
    position: absolute; 
    top: 0;
    right: 0;
    padding: 4.5rem 5% 0 0;
    width: 90px;
    opacity: 0;
    z-index: 50;
}


.mobile-nav{
    background-color: var(--off-black);
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    z-index: 25;
    transform: translate(-150%);
}

.mobile-nav__list {
    text-align: center;  
    align-items: flex-start; 
}

.mobile-nav__list-item {
    list-style: none;
    font-size: 48pt;
    line-height: 1.5;
    padding: 10rem 1rem 0;
}



@media screen and (max-width: 1100px) {
    .mobile-menu__icon {
        opacity: 100;
    }
    .nav__list-item {
        display: hidden;
    }
    
}

JS 
const openMenu = document.getElementById('hamburger-open');
const closedMenu = document.getElementById ('hamburger-close');
const menu = document.getElementById('menu');
const clickMenu = document.getElementsByClassName ("mobile-nav__list-item--link")


menu.style.display = 'none';
closedMenu.style.display='none';

openMenu.addEventListener ('click', () => {
    menu.style.display = 'block';
    closedMenu.style.display = 'block';
    openMenu.style.display= 'none';
});

closedMenu.addEventListener  ('click', () => {
    openMenu.style.display= 'block';
    menu.style.display = 'none';
closedMenu.style.display= 'none';
});